    <VerticalStackLayout Margin="20,35,20,20">
        <Entry Placeholder="Usuario"
               MaxLength="10"
               IsSpellCheckEnabled="True"
               IsTextPredictionEnabled="True"
               IsPassword="True"
               Keyboard="Numeric"
               CharacterSpacing="10"
               TextChanged="Entry_TextChanged"
               Completed="Entry_Completed"/>
        <Button Text="Click aqui" Clicked="Button_Clicked"/>

    </VerticalStackLayout>
